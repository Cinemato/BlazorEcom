<div class="modal fade modal-lg" id="bsConfirmationModal" tabindex="-1" aria-labelledby="bsConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="bsConfirmationModalLabel">@Title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <button type="button" class="btn btn-lg btn-secondary" style="width : 150px" data-bs-dismiss="modal" @onclick="() => ConfirmationClicked(false)">Close</button>
                <button type="button" class="btn btn-lg @ButtonStyle" style="width : 150px" @onclick="() => ConfirmationClicked(true)">@ButtonText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<bool> OnModalConfirmation { get; set; }

    [Parameter]
    public string Title { get; set; } = "Please Confirm";

    [Parameter]
    public string ButtonText { get; set; } = "Confirm";

    [Parameter]
    public string ButtonStyle { get; set; } = "btn-primary";



    public async Task ConfirmationClicked(bool value)
    {
        if (value)
        {
            await OnModalConfirmation.InvokeAsync(true);
        }
    }
}